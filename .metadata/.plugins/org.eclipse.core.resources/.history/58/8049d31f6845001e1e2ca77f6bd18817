package day09;

public class 과제 {

	public static void main(String[] args) {
		// 클래스 생성 => 2명에 대한 정보를 출력할 것
		// 값을 입력 후 해당 학생의 정보 출력 (2명)
		
		Student s=new Student();
		s.setName("황새미");
		s.setAge(28);
		s.setPhone("010-1111-1111");
		s.print();

	}

}

// 클래스 생성
// 학생 클래스 생성
// 이름, 나이, 전화번호, 주소
// 출력
// 이름(나이) 전화번호 => 한줄로 출력

class Student{
	private String name;
	private int age;
	private String phone;
	private String address;
	
	public void print() {
		System.out.println(name+"("+age+")"+phone);
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		this.age = age;
	}

	public String getPhone() {
		return phone;
	}

	public void setPhone(String phone) {
		this.phone = phone;
	}

	public String getAddress() {
		return address;
	}

	public void setAddress(String address) {
		this.address = address;
	}
	
}
