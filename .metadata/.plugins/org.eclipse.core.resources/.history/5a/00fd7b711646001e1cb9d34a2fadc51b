package day10;

public class Class03 {

	public static void main(String[] args) {
		/* tv
		 * 리모컨 : 파워 채널업다운 볼륨업다운*/
		
		Tv tv=new Tv();
		tv.power();
		tv.channelUp();
		tv.channelUp();
		tv.channelUp();
		tv.channelUp();
		tv.channelUp();
		tv.channelUp();
		tv.channelUp();
		tv.channelUp();
		tv.channelUp();
		tv.channelUp();
		tv.channelUp();
		tv.channelDown();
		tv.channelDown();
		tv.channelDown();
		tv.channelDown();
		tv.channelDown();
		tv.channelDown();
		tv.channelDown();
		tv.channelDown();
		tv.channelDown();
		tv.channelDown();
		tv.channelDown();
		tv.channelDown();
		tv.volumeUp();
		tv.volumeUp();
		tv.volumeUp();
		tv.volumeUp();
		tv.volumeUp();
		tv.volumeUp();
		tv.volumeUp();
		tv.volumeUp();
		tv.volumeUp();
		tv.volumeUp();
		tv.volumeUp();
		tv.volumeUp();
		tv.volumeDown();
		tv.volumeDown();
		tv.volumeDown();
		tv.volumeDown();
		tv.volumeDown();
		tv.volumeDown();
		tv.volumeDown();
		tv.volumeDown();
		tv.volumeDown();
		tv.volumeDown();
		tv.volumeDown();
		
		

	}

}

class Tv{
	private String name;
	private String color;
	private int inch;
	private boolean power;
	private int channel;
	private int volume;
	
	public Tv() {}
	public Tv(String name, String color, int inch) {
		this.name=name;
		this.color=color;
		this.inch=inch;
	}
	public void tvPrint() {
		System.out.println("이름 : "+name+" 색상 : "+color+" 인치 : "+inch);
	}
	
	
	
	public void power() {
		if(power=true) {
		System.out.println("전원이 켜졌습니다.");
	} else {
		System.out.println("전원이 꺼졌습니다.");
	}
	}
	public void channelUp() {
		if(power&&channel<=10) {
			channel++;
			System.out.println("현재 채널 : "+channel);
		} else if(power&&channel>10) {
			channel=0;
			System.out.println("현재 채널 : "+channel);
		} else {
			System.out.println("전원이 꺼졌습니다.");
		}
	}
	public void channelDown() {
		if(power&&channel>=0) {
			channel--;
			System.out.println("현재 채널 : "+channel);
		} else if(power&&channel<0) {
			channel=10;
			System.out.println("현재 채널 : "+channel);
		} else {
			System.out.println("전원이 꺼졌습니다.");
		}
	}
	public void volumeUp() {
		if(power&&volume==10) {
			System.out.println("최고 음량 입니다.");
		}else {
		volume++;
		System.out.println("현재음량 : "+volume);
		}	
	}
	public void volumeDown() {
		if(power&&volume==0) {
			System.out.println("최저 음량 입니다.");
		}else {
		volume--;
		System.out.println("현재음량 : "+volume);
		}	
	}
	
	
}
