package day09;

public class ClassEx01 {

	public static void main(String[] args) {
		Point p=new Point();
		p.print();
		p.x=1;
		p.y=3;
		p.print();

	}

}
//(0,0)
class Point{
	// 멤버변수 자리
	// 멤버변수는 자동 초기화 됨
	int x;
	int y;
	
	// print
	// 같은 클래스 내의 멤버 변수는 모든 메서드에서 공유된다
	public void print() {
		System.out.println("("+x+","+y+")");
	}
}
