package day07;

public class Method07 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		/*숫자와 기호를 주고 기호를 숫자만큼 출력하는 메서드
		 * ex)
		 * 3,* => ***
		 * 5,o => ooooo
		 * 2,★ => ★★
		 * 
		 * main에서 숫자와 기호를 입력받아 메서드 호출 후 출력*/
		a(3,'@');

	}
	public static void a(int num, char ch) {
		for(int i=1; i<=num; i++) {
			System.out.print(ch);
		}
				
	}

}
